{
    "compilerOptions": {
        "allowJs": false,
        "checkJs": false,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "resolveJsonModule": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "target": "ES2022"
    },
    "exclude": ["src/**/*.test.ts"]
}
