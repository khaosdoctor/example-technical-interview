{
    "name": "backend-test",
    "version": "1.0.0",
    "description": "Basic setup to for the backend engineer test",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "node --env-file=.env dist/index.js",
        "start:dev": "NODE_OPTIONS='--import tsx' node --env-file=.env src/index.ts",
        "prestart": "npm run build",
        "build": "tsc",
        "test:only": "glob -c \"node --import tsx --test\" \"./src/**/*.test.ts\"",
        "test": "nyc npm run test:only"
    },
    "author": "Christoph Fey",
    "license": "ISC",
    "dependencies": {
        "cors": "^2.8.5",
        "debug": "^4.3.4",
        "express": "^4.18.2",
        "helmet": "^7.1.0",
        "mongodb": "^6.2.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/cors": "^2.8.16",
        "@types/debug": "^4.1.12",
        "@types/express": "^4.17.21",
        "@types/node": "^20.9.0",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.1",
        "glob": "^10.3.10",
        "nyc": "^15.1.0",
        "prettier": "^3.0.3",
        "tsx": "^4.1.1",
        "typescript": "^5.2.2"
    }
}
